generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  role     String  @default("user") // Can be "admin", "moderator", etc.
  createdAt DateTime @default(now())

  // Relations
  teams Team[]
}





model Team {
  id          String   @id @default(uuid())
  name        String
  description String?
  created_at  DateTime @default(now())

  // Relations
  userId  String // âœ… Foreign Key for User
  user    User     @relation(fields: [userId], references: [id])
  members Member[]
}

model Member {
  id         String   @id @default(uuid())
  name       String
  role       String
  teamId     String
  team       Team     @relation(fields: [teamId], references: [id])
  created_at DateTime @default(now())
}

model Song {
  id         String   @id @default(uuid())
  title      String
  artist     String
  created_at DateTime @default(now())
}
